<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.XYZApplication" parent="AppTheme"/>

    <!-- Detail activity theme. -->
    <style name="Theme.XYZApplication.Detail" parent="AppTheme">
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/primaryTextColorToolbar</item>
        <item name="android:textColorHighlight">@color/hightlightTextColorPopup</item>
        <item name="android:actionMenuTextColor">@color/primaryTextColorToolbar</item>
        <item name="android:textColorSecondary">@color/primaryTextColorToolbar</item>
        <item name="android:background">@color/theme_primary</item>
    </style>

    <style name="Theme.XYZApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="ActionBarThemeOverlay.NoTitle" parent="AppTheme.AppBarOverlay">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
